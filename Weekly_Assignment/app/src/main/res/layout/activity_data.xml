<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taeconsultant.weekly_assignment.DataActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:hint="age"
        android:textColorHint="@color/bpLight_gray"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="Password"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:textColor="@android:color/black"
        android:textColorHint="@color/bpLight_gray"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:hint="Username"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/name_txt"
        android:textColor="@android:color/black"
        android:textColorHint="@color/bpLight_gray"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/name_txt"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="94dp"
        android:background="@android:color/white"
        android:hint="Name"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textColorHint="@color/bpLight_gray"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/photo"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient_button_background"
        android:text="Change Photo"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/date_btn"
        android:layout_width="174dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:text="Choose Birthdate"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/age"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:entries="@array/nation_array"
        android:hint="Choose Location"
        android:background="@color/bpWhite"
        android:textColor="@android:color/black"
        android:textColorHint="@color/bpLight_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_btn" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="227dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Gender"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/postcode_text"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/white"
        android:hint="Postcode(opt)"
        android:textColor="@android:color/black"
        android:textColorHint="@color/bpLight_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/submit"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/gradient_button_background"
        android:text="Send"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="154dp"
        android:layout_height="102dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        tools:layout_editor_absoluteX="6dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="117dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="Female"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton4" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="Male"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:text="Not Specified"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton3" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="152dp"
        app:srcCompat="@drawable/android"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
